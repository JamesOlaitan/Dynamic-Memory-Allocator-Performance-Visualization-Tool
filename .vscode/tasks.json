{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Allocator Tests",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++14",
                "-g",
                "${workspaceFolder}/allocator_tests.cpp",
                "${workspaceFolder}/custom_allocator.cpp",
                "${workspaceFolder}/data_logger.cpp",
                "-o",
                "${workspaceFolder}/allocator_tests",
                "-pthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc",
            "group": "build",
            "detail": "Build task for allocator_tests"
        },
        {
            "label": "Build Unit Tests",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++14",
                "-g",
                "${workspaceFolder}/unit_tests.cpp",
                "${workspaceFolder}/custom_allocator.cpp",
                "${workspaceFolder}/data_logger.cpp",
                "-o",
                "${workspaceFolder}/unit_tests",
                "-I/opt/homebrew/Cellar/googletest/1.15.2/include",
                "-L/opt/homebrew/Cellar/googletest/1.15.2/lib",
                "-lgtest",
                "-lgtest_main",
                "-pthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc",
            "group": "build",
            "detail": "Build task for unit_tests"
        },
        {
            "label": "Build Main",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++14",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/custom_allocator.cpp",
                "${workspaceFolder}/data_logger.cpp",
                "-o",
                "${workspaceFolder}/main",
                "-pthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc",
            "group": "build",
            "detail": "Build task for main"
        },
        {
            "label": "Build All",
            "dependsOn": [
                "Build Allocator Tests",
                "Build Unit Tests",
                "Build Main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "echo",
            "args": ["Building all targets..."]
        }
    ]
}