{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build with Google Test",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-arch",
                "arm64",
                "-std=c++14",
                "${fileDirname}/main.cpp",
                "${fileDirname}/custom_allocator.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/opt/homebrew/Cellar/googletest/1.15.2/include",
                "-L/opt/homebrew/Cellar/googletest/1.15.2/lib",
                "-lgtest",
                "-lgtest_main",
                "-pthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}